<section class="vh-100">
  <em><h3 class= "text-center mt-5"> Welcome to MessageMe - A Complete ChatApp </h3></em>
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100 mt-5">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
          class="img-fluid" alt="Sample image">
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1 mt-5">
        <em><h3 class= "text-center"> Login to continue </h3></em>

        <%= form_for(:session, html: {class: "ui form", role: "form"}, url: login_path) do |f| %>
          <div class="form-outline mb-4 mt-4">
            <%= f.text_field :username, placeholder: "Username", class: "form-control form-control-lg" %>
          </div>

          <div class="form-outline mb-3">
            <%= f.password_field :password, placeholder: "Password", class: "form-control form-control-lg" %>
          </div>

          <div class="text-center text-lg-start mt-4 pt-2">
            <%= f.button "Login", class: "btn btn-primary btn-lg w-100" %>          
            <p class="mt-3">Don't have an account? <a href="#!">Register</a></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>